<header class="container-fluid">
    <div class="row logo-container">
        {% block cities %}
            <a href="#" class="location">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                {% if room is defined %}
                    <span class="city hidden-xs">{{ currentCity is defined ? currentCity : room.city.name(app.request.locale) }}</span>
                {% else %}
                    <span class="city hidden-xs">{{ 'all.cities'|trans }}</span>
                {% endif %}
                <span class="caret hidden-xs"></span>
            </a>
            <ul class="city-list">
                <li>
                    <a href="{{ path('home_page') }}">{{ 'all.cities'|trans }}</a>
                </li>
                {% for city in cities %}
                    <li>
                        <a href="{{ path('home_page', {city: city.nameEn|lower}) }}">{{ city.name(app.request.locale) }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endblock %}

        <a href="{{ path('home_page') }}" class="logo">
            <img src="{{ asset('img/logo.gif') }}" alt="Don&#039;t Panic">
        </a>

        <div class="callback hidden-sm hidden-xs">
            <p>{{ 'alias.phone'|trans }}</p>
            <a href="#" class="btn btn-warning" data-toggle="modal" data-target="#callback-form">
                {{ 'callback'|trans }}
            </a>
        </div>

        {% block languages %}
            {% set route = app.request.get('_route') == 'default_home_page' ? 'home_page' : app.request.get('_route') %}
            <div class="lang">
                <ul class="lang-list">
                    <li>
                        <a href="{{ path(route, app.request.get('_route_params')|merge({'_locale': 'ru'})|merge(app.request.query.all)) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="40" viewBox="0 0 640 480">
                                <g fill-rule="evenodd" stroke-width="1pt">
                                    <path fill="#fff" d="M0 0h640v480H0z"/>
                                    <path fill="#0039a6" d="M0 160.003h640V480H0z"/>
                                    <path fill="#d52b1e" d="M0 319.997h640V480H0z"/>
                                </g>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path(route, app.request.get('_route_params')|merge({'_locale': 'en'})|merge(app.request.query.all)) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="40" viewBox="0 0 640 480">
                                <defs>
                                    <clipPath id="a">
                                        <path fill-opacity=".67" d="M-85.333 0h682.67v512h-682.67z"/>
                                    </clipPath>
                                </defs>
                                <g clip-path="url(#a)" transform="translate(80) scale(.94)">
                                    <g stroke-width="1pt">
                                        <path fill="#006" d="M-256 0H768.02v512.01H-256z"/>
                                        <path d="M-256 0v57.244l909.535 454.768H768.02V454.77L-141.515 0H-256zM768.02 0v57.243L-141.515 512.01H-256v-57.243L653.535 0H768.02z"
                                              fill="#fff"/>
                                        <path d="M170.675 0v512.01h170.67V0h-170.67zM-256 170.67v170.67H768.02V170.67H-256z"
                                              fill="#fff"/>
                                        <path d="M-256 204.804v102.402H768.02V204.804H-256zM204.81 0v512.01h102.4V0h-102.4zM-256 512.01L85.34 341.34h76.324l-341.34 170.67H-256zM-256 0L85.34 170.67H9.016L-256 38.164V0zm606.356 170.67L691.696 0h76.324L426.68 170.67h-76.324zM768.02 512.01L426.68 341.34h76.324L768.02 473.848v38.162z"
                                              fill="#c00"/>
                                    </g>
                                </g>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path(route, app.request.get('_route_params')|merge({'_locale': 'de'})|merge(app.request.query.all)) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="40" viewBox="0 0 640 480">
                                <path fill="#ffce00" d="M0 320h640v160.002H0z"/>
                                <path d="M0 0h640v160H0z"/>
                                <path fill="#d00" d="M0 160h640v160H0z"/>
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>
        {% endblock %}

        <div role="button" class="cmn-toggle-switch cmn-toggle-switch__htx">
            <span>toggle menu</span>
        </div>
    </div>
</header>
