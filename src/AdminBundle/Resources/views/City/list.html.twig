{% extends 'AdminBundle:layouts:main.html.twig' %}

{% block body %}
    <a class="btn btn-success pull-right" href="{{ path('admin_cities_add') }}">Add City <span class="fa fa-plus"></span></a>
    <h1 class="page-header">Cities</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Name[RU]</th>
                <th>Name[EN]</th>
                <th>Name[DE]</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.id }}</td>
                    <td>{{ city.translate('ru').name }}</td>
                    <td>{{ city.translate('en').name }}</td>
                    <td>{{ city.translate('de').name }}</td>
                    <td>
                        <a class="btn btn-xs btn-warning" href="{{ path('admin_cities_edit', {id: city.id}) }}">edit <span class=" fa fa-pencil"></span></a>
                         <a class="btn btn-xs btn-danger" href="{{ path('admin_cities_delete', {id: city.id}) }}">delete <span class=" fa fa-close"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}