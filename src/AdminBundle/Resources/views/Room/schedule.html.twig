{% extends 'AdminBundle:layouts:main.html.twig' %}

{% block body %}
    <h1 class="page-header">{{ room.title }} calendar</h1>
    <h2>First Week</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                {% for game in schedule[0]['games']|slice(0, 7) %}
                    <th>{{ game.date|date('l') }}<br><small>{{ game.date|date('d-m-Y') }}</small></th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for row in schedule %}
                <tr>
                    <th>{{ row.time }}</th>
                    {% for game in row.games|slice(0, 7) %}
                        <td>{{ game.busy ? 'busy' : 'free' }}<br>{% for price in game.prices %}{{ price.players }} / {{ price.price }}<br>{% endfor %}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <h2>Second Week</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th></th>
                {% for game in schedule[0]['games']|slice(7, 14) %}
                    <th>{{ game.date|date('l') }}<br><small>{{ game.date|date('d-m-Y') }}</small></th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for row in schedule %}
                <tr>
                    <th>{{ row.time }}</th>
                    {% for game in row.games|slice(7, 14) %}
                        <td>{{ game.busy ? 'busy' : 'free' }}<br>{% for price in game.prices %}{{ price.players }} / {{ price.price }}<br>{% endfor %}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

